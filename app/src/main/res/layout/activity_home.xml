<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main"
    >

    <!-- ðŸ” Thanh tÃ¬m kiáº¿m -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:hint="TÃ¬m kiáº¿m sáº£n pháº©m"
            android:textSize="14sp"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />
    </androidx.cardview.widget.CardView>

    <!-- ðŸ–¼ Banner -->
    <ImageView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/banner_trangchu"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ· TiÃªu Ä‘á» danh má»¥c -->
    <TextView
        android:id="@+id/titleKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh má»¥c"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ðŸ”² Grid danh má»¥c -->
    <GridLayout
        android:id="@+id/gridKategori"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:padding="12dp"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/titleKategori"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Danh má»¥c 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/icon_jumpman" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Jordan" android:textSize="12sp"/>
        </LinearLayout>

        <!-- Danh má»¥c 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/icon_adidas" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adidas" android:textSize="12sp"/>
        </LinearLayout>

        <!-- Danh má»¥c 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/icon_nike" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nike" android:textSize="12sp"/>
        </LinearLayout>
    </GridLayout>

    <!-- ðŸŒŸ TiÃªu Ä‘á» Sáº£n pháº©m ná»•i báº­t -->
    <TextView
        android:id="@+id/featuredTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sáº£n pháº©m ná»•i báº­t"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/gridKategori"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ðŸ›’ Horizontal ScrollView -->
    <HorizontalScrollView
        android:id="@+id/scrollFeatured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/featuredTitle"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- ðŸŒŸ CÃ¡c sáº£n pháº©m ná»•i báº­t (1 â†’ 6) -->
            <!-- SP 1 -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_marginEnd="12dp" android:gravity="center">
                <ImageView android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/jordan_air1"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Jordan Air 1" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5.000.000â‚«" android:textColor="#FF0000" android:textStyle="bold" android:textSize="12sp"/>
            </LinearLayout>

            <!-- SP 2 -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_marginEnd="12dp" android:gravity="center">
                <ImageView android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/adidas_samba"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adidas Samba" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2.500.000â‚«" android:textColor="#FF0000" android:textStyle="bold" android:textSize="12sp"/>
            </LinearLayout>

            <!-- SP 3 -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_marginEnd="12dp" android:gravity="center">
                <ImageView android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/nike_air_force1"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nike Air Force 1" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3.800.000â‚«" android:textColor="#FF0000" android:textStyle="bold" android:textSize="12sp"/>
            </LinearLayout>

            <!-- SP 4 -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_marginEnd="12dp" android:gravity="center">
                <ImageView android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/nike_air_jordan"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nike Air Jordan 1 Retro" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4.200.000â‚«" android:textColor="#FF0000" android:textStyle="bold" android:textSize="12sp"/>
            </LinearLayout>

            <!-- SP 5 -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_marginEnd="12dp" android:gravity="center">
                <ImageView android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/adidas_campus"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adidas Campus" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3.833.000â‚«" android:textColor="#FF0000" android:textStyle="bold" android:textSize="12sp"/>
            </LinearLayout>

            <!-- SP 6 -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical" android:gravity="center">
                <ImageView android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/nike_blazer_mid"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nike Blazer Mid" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3.050.100â‚«" android:textColor="#FF0000" android:textStyle="bold" android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- ðŸ“± Thanh Ä‘iá»u hÆ°á»›ng dÆ°á»›i -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/icon_trangchu" />
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/icon_nhanhieu" />
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/icon_lichsu" />
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/icon_taikhoan" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
